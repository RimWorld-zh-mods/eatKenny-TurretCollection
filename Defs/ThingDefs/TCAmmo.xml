<ThingDef ParentName="ResourceBase">
    
<defName>SmartMine</defName>
    
<label>smart mine</label>
    
<description>A smart anti-personnel mine, launch itself to the enemy within a small radius and explode.</description>
    
<graphicData>
<texPath>Things/Item/Resource/SmartMine</texPath>
  
<graphicClass>Graphic_Single</graphicClass>  
</graphicData>
<soundInteract>Standard_Drop</soundInteract>
    
<soundDrop>Standard_Drop</soundDrop>

<tickerType>Normal</tickerType>
<stackLimit>5</stackLimit>
<statBases>

    <WorkToMake>8000</WorkToMake>
    <MarketValue>150</MarketValue>
    
    <MaxHitPoints>100</MaxHitPoints>
    <Flammability>0</Flammability>
    <DeteriorationRate>0</DeteriorationRate>
    
</statBases>
    
    <costList>
      <Steel>12</Steel>
      <Component>1</Component>
    </costList>
<thingCategories>
 
    <li>Manufactured</li>
    
</thingCategories> 
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
 <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <wickTicks>
          <min>10</min>
          <max>30</max>
        </wickTicks>
      </li>
</comps>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
    </recipeMaker>
</ThingDef>



